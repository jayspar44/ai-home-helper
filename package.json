{
  "name": "home-helper",
  "version": "2.23.2",
  "description": "Home Helper app with Vercel serverless backend",
  "main": "api/index.js",
  "scripts": {
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "build": "npm run install-all && cd frontend && npm run build",
    "lint": "eslint .",
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "dev:local": "concurrently \"cd backend && npm run dev\" \"cd frontend && npm start\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "build:frontend": "cd frontend && npm run build",
    "test:frontend": "cd frontend && npm test",
    "validate-env": "node scripts/validate-env.js",
    "version:get": "node scripts/get-version.js",
    "version:bump": "node scripts/bump-version.js",
    "postinstall": "echo 'Setup complete! Run npm run dev:local to start development servers.'",
    "gcp:deploy:dev": "node scripts/gcp-deploy.js dev",
    "gcp:deploy:prod": "node scripts/gcp-deploy.js prod",
    "gcp:deploy:dev:secrets": "node scripts/gcp-deploy.js dev",
    "gcp:deploy:prod:secrets": "node scripts/gcp-deploy.js prod",
    "gcp:logs:dev": "gcloud app logs tail -s dev",
    "gcp:logs:prod": "gcloud app logs tail -s default",
    "gcp:instances:list": "gcloud app instances list",
    "gcp:instances:count": "gcloud app instances list --format='table(service,version,id)' | tail -n +2 | wc -l",
    "gcp:setup:secrets": "node scripts/gcp-setup-secrets.js",
    "gcp:setup:cache": "node scripts/gcp-setup-cache.js",
    "gcp:check:ready": "node scripts/gcp-check-deployment.js"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.120",
    "@google/generative-ai": "^0.17.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "firebase-admin": "^13.5.0",
    "gh": "^2.8.9",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@eslint/css": "^0.11.0",
    "@eslint/js": "^9.36.0",
    "@eslint/markdown": "^7.2.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11"
  },
  "keywords": [
    "recipe",
    "ai",
    "home-helper"
  ],
  "author": "You",
  "license": "MIT"
}
