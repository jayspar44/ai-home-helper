# Local Development Environment Variables
# Copy this file to .env.local and fill in your actual values

# Firebase Configuration (Single JSON object)
# Get this from your Firebase Console -> Project Settings -> General -> Your apps
REACT_APP_FIREBASE_CONFIG={"apiKey":"your-local-api-key","authDomain":"your-project.firebaseapp.com","projectId":"your-project-id","storageBucket":"your-project.appspot.com","messagingSenderId":"123456789","appId":"1:123456789:web:abcdef123456"}

# Build Configuration (for local development)
DISABLE_ESLINT_PLUGIN=true
ESLINT_NO_DEV_ERRORS=true
GENERATE_SOURCEMAP=true

# API Configuration
REACT_APP_API_URL=http://localhost:3001