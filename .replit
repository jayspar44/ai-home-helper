entrypoint = "backend/server.js"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["node", "backend/server.js"]
deploymentTarget = "autoscale"
ignorePorts = false

[[ports]]
localPort = 3001
externalPort = 80

[workflows]
runButton = "Build and Run Full-Stack"

[[workflows.workflow]]
name = "Build and Run Full-Stack"
author = 45443424
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node backend/server.js"
